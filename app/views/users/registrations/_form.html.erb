<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:role => "form"}) do |f| %>
  <%= f.error_messages %>
  <div class="form-group form-group-custom">
    <%= f.label :nome_completo, "Nome Completo", :class => "control-label" %>
    <%= f.text_field :nome_completo, :class => "form-control", :placeholder => "informe o nome completo" %>
  </div>
  <div class="form-group form-group-custom">
    <%= f.label :email, "Email", :class => "control-label" %>
    <%= f.email_field :email, :class => "form-control", :placeholder => "informe email do usuário" %>
  </div>
  <div class="form-group form-group-custom">
    <%= f.label :password, "Definir Senha de Acesso", :class => "control-label" %>
    <%= f.password_field :password, :class => "form-control", :placeholder => "mínimo 6 caracteres" %>
  </div>
  <div class="form-group form-group-custom">
    <%= f.label :password_confirmation, "Confirmar Senha", :class => "control-label" %>
    <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "redigite a senha" %>
  </div>
  <div class="form-group form-group-custom">
    <%= f.label :grupo_id, "Grupo", :class => "control-label" %>
    <%= f.collection_select(:grupo_id, Grupo.all, :id, :descricao, { :include_blank => "Selecione o Grupo de Permissões" }, :class => "form-control") %>
  </div>
  <div class="form-group form-group-custom">
    <%= f.hidden_field :id, :value => resource.id %>
    <%= f.submit "Salvar", :class => "btn btn-success" %>
  </div>
<% end %>