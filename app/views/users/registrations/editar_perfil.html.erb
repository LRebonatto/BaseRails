<div class="col-xs-12 col-sm-8 col-md-10 col-lg-10">
  <ol class="breadcrumb">
    <li><%= link_to("Início", arearestrita_url) %></li>
    <li class="active">Editar Meu Perfil</li>
  </ol>

  <div class="panel panel-primary">
    <div class="panel-heading col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <ul class="nav navbar-nav navbar-left">
        <li><h3 class="panel-title">Editar Meu Perfil</h3></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle navbar-panel-custom" data-toggle="dropdown">Opções <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <% if valida_menu(7) %>
              <li>
                <%= link_to(user_editar_senha_path, "role" => "button") do %>
                  <span class="glyphicon glyphicon-lock"></span>
                  &nbsp;Editar Senha
                <% end %>
              </li>
            <% end %>
            <% if valida_menu(8) %>
              <li>
                <%= link_to(user_editar_imagem_path, "role" => "button") do %>
                  <span class="glyphicon glyphicon-picture"></span>
                  &nbsp;Editar Imagem
                <% end %>
              </li>
            <% end %>
          </ul>
        </li>
      </ul>
    </div>
    <div class="panel-body">
      <%= form_for(@user, :url => user_update_perfil_path, :html => {:role => "form"}) do |f| %>
        <%= f.error_messages %>
        <div class="form-group form-group-custom">
          <%= f.label :nome_completo, "Nome Completo", :class => "control-label" %>
          <%= f.text_field :nome_completo, :class => "form-control", :placeholder => "informe o nome completo" %>
        </div>
        <div class="form-group form-group-custom">
          <%= f.label :email, "Email", :class => "control-label" %>
          <%= f.email_field :email, :class => "form-control", :placeholder => "informe email do usuário" %>
        </div>
        <div class="form-group form-group-custom">
          <%= f.submit "Salvar", :class => "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>