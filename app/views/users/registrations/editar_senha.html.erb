<div class="col-xs-12 col-sm-8 col-md-10 col-lg-10">
  <ol class="breadcrumb">
    <li><%= link_to("Início", arearestrita_url) %></li>
    <li><%= link_to("Editar Perfil", user_editar_perfil_url) %></li>
    <li class="active">Editar Senha</li>
  </ol>

  <div class="panel panel-primary">
    <div class="panel-heading col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <ul class="nav navbar-nav navbar-left">
        <li><h3 class="panel-title">Editar Senha</h3></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle navbar-panel-custom" data-toggle="dropdown">Opções <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <% if valida_menu(6) %>
              <li>
                <%= link_to(user_editar_perfil_path, "role" => "button") do %>
                  <span class="glyphicon glyphicon-pencil"></span>
                  &nbsp;Editar Perfil
                <% end %>
              </li>
            <% end %>
            <% if valida_menu(8) %>
              <li>
                <%= link_to(user_editar_imagem_path, "role" => "button") do %>
                  <span class="glyphicon glyphicon-picture"></span>
                  &nbsp;Editar Imagem
                <% end %>
              </li>
            <% end %>
          </ul>
        </li>
      </ul>
    </div>
    <div class="panel-body">
      <%= form_for(@user, :url => user_update_senha_path, :html => {:role => "form"}) do |f| %>
        <%= f.error_messages %>
        <div class="form-group form-group-custom">
          <%= f.label :password, "Definir Senha de Acesso", :class => "control-label" %>
          <%= f.password_field :password, :class => "form-control", :placeholder => "mínimo 6 caracteres" %>
        </div>
        <div class="form-group form-group-custom">
          <%= f.label :password_confirmation, "Confirmar Senha", :class => "control-label" %>
          <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "redigite a senha" %>
        </div>
        <div class="form-group form-group-custom">
          <%= f.submit "Salvar", :class => "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>