<div class="col-xs-12 col-sm-8 col-md-10 col-lg-10">
  <ol class="breadcrumb">
    <li><%= link_to("Início", arearestrita_url) %></li>
    <li><%= link_to("Editar Perfil", user_editar_perfil_url) %></li>
    <li class="active">Editar Imagem</li>
  </ol>

  <div class="panel panel-primary">
    <div class="panel-heading col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <ul class="nav navbar-nav navbar-left">
        <li><h3 class="panel-title">Editar Imagem</h3></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle navbar-panel-custom" data-toggle="dropdown">Opções <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <% if valida_menu(7) %>
              <li>
                <%= link_to(user_editar_senha_path, "role" => "button") do %>
                  <span class="glyphicon glyphicon-lock"></span>
                  &nbsp;Editar Senha
                <% end %>
              </li>
            <% end %>
            <% if valida_menu(6) %>
              <li>
                <%= link_to(user_editar_perfil_path, "role" => "button") do %>
                  <span class="glyphicon glyphicon-pencil"></span>
                  &nbsp;Editar Perfil
                <% end %>
              </li>
            <% end %>
          </ul>
        </li>
      </ul>
    </div>
    <div class="panel-body">
      <%= form_for(@user, :url => user_update_imagem_path, :html => {:multipart => true, :role => "form"}) do |f| %>
        <%= f.error_messages %>
        <div class="form-group form-group-custom">
          <%= f.label :imagem_perfil, "Imagem do Perfil", :class => "control-label" %>
          <%= f.file_field :imagem_perfil, :class => "form-control" %>
        </div>
        <div class="form-group form-group-custom">
          <%= f.submit "Salvar", :class => "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>