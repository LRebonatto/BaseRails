<div class="container-fluid div-total-page-login" align="center">
  <div class="row">
    <%= image_tag("../images/topo/logo.png", :class => "img-responsive") %>
  </div>
  <div class="row">
    <div class="container-fluid col-xs-12 col-sm-4 col-sm-offset-4 col-md-4 col-md-offset-4 div-form-page-login">
      <%= form_for("user", :url => user_session_path, :html => {:class => "form-vertical", :role => "form"}) do |f| %>
        <%= f.error_messages %>
        <div class="row">
          <div class="form-group" align="left">
            <%= f.label :email, "E-mail" %>
            <%= f.email_field :email, :class => "form-control", :placeholder => "informe seu E-mail de acesso" %>
          </div>
          <div class="form-group" align="left">
            <%= f.label :password, "Senha" %>
            <%= f.password_field :password, :class => "form-control", :placeholder => "informe a sua Senha" %>
          </div>
        </div>
        <div class="row">
          <div class="checkbox" align="left">
            <label>
              <input class="col-xs-1 col-md-1" type="checkbox">Mantenha-me conectado
            </label>
            <%= f.submit "Entrar", :name => nil, :class => "btn btn-default pull-right" %>
          </div>
        </div>
        <div class="row">
          <%= link_to("Esqueceu a senha?", new_user_password_path, :class => "pull-right a-esqueceu-senha-form-login") %>
        </div>
      <% end %>
    </div>
  </div>
</div>