<%= form_for(@grupo, :html => {:role => "form"}) do |f| %>
  <%= f.error_messages %>
  <div class="form-group form-group-custom">
    <%= f.label :descricao, "Nome do Grupo", :class => "control-label" %>
    <%= f.text_field :descricao, :class => "form-control", :placeholder => "informe o nome do Grupo" %>
  </div>
  <div class="form-group form-group-custom">
    <%= f.submit "Salvar", :class => "btn btn-success" %>
  </div>
<% end %>