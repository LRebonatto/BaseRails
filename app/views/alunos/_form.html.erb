<%= form_for(@aluno, :html => {:multipart => true, :role => "form"}) do |f| %>
  <%= f.error_messages %>
  <div class="form-group form-group-custom">
    <%= f.label :nome, "Nome do Aluno", :class => "control-label" %>
    <%= f.text_field :nome, :class => "form-control", :placeholder => "informe o Nome do Aluno" %>
  </div>
  <div class="form-group form-group-custom">
    <%= f.label :data_nascimento, "Data de Nascimento", :class => "control-label" %>
    <%= f.date_select :data_nascimento, :class => "form-control", :placeholder => "informe a Data de Nascimento do Aluno", :start_year => 1900 %>
  </div>
  <div class="form-group form-group-custom">
    <%= f.label :status, "Status", :class => "control-label" %>
    <%= f.select :status, [['Ativo', 0], ['Inativo', 1]], {}, {:class => "form-control"} %>
  </div>
  <div class="form-group form-group-custom">
    <%= f.submit "Salvar", :class => "btn btn-success" %>
  </div>
<% end %>