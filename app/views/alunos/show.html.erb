<div class="col-xs-12 col-sm-8 col-md-10 col-lg-10">
  <ol class="breadcrumb">
    <li><%= link_to("Início", arearestrita_url) %></li>
    <li><%= link_to("Cadastro de Alunos", alunos_url) %></li>
    <li class="active">Exibir Aluno</li>
  </ol>

  <div class="panel panel-primary">
    <div class="panel-heading col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <ul class="nav navbar-nav navbar-left">
        <li><h3 class="panel-title">Cadastro de Alunos</h3></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle navbar-panel-custom" data-toggle="dropdown">Opções <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <% if valida_menu(38) %>
              <li>
                <%= link_to(new_aluno_path, "role" => "button") do %>
                  <span class="glyphicon glyphicon-plus-sign"></span>
                  &nbsp;Cadastrar Aluno
                <% end %>
              </li>
            <% end %>
            <% if valida_menu(39) %>
              <li>
                <%= link_to(edit_aluno_path(@aluno), "role" => "button") do %>
                  <span class="glyphicon glyphicon-pencil"></span>
                  &nbsp;Editar Aluno
                <% end %>
              </li>
            <% end %>
            <% if valida_menu(41) %>
              <li class="divider"></li>
              <li>
                <%= link_to(alunos_path, "role" => "button") do %>
                  <span class="glyphicon glyphicon-tasks"></span>
                  &nbsp;Listar Alunos
                <% end %>
              </li>
            <% end %>
          </ul>
        </li>
      </ul>
    </div>
    <div class="panel-body">
      <div class="row-fluid row-fluid-custom">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <div class="panel panel-success">
            <div class="panel-heading">
              <h3 class="panel-title">Informações Básicas</h3>
            </div>
            <div class="panel-body">
              <p><b>Identificador do Site:</b> <%= @aluno.id.to_s.rjust(6, '0') %></p>
              <p><b>Nome:</b> <%= @aluno.nome %></p>
              <p><b>Data de Nascimento:</b> <%= @aluno.data_nascimento.to_s(:data_nascimento) %></p>
            </div>
          </div>
          <div class="panel panel-info">
            <div class="panel-heading">
              <h3 class="panel-title">Informações de Cadastro</h3>
            </div>
            <div class="panel-body">
              <p><b>Cadastrado em:</b> <%= @aluno.created_at.to_s(:data_hora) %></p>
              <p><b>Cadastrado por:</b> <%= @aluno.user.nome_completo %></p>
              <p><b>Status:</b> 
                <% case @aluno.status %>
                  <% when 0 %>
                    Ativo
                  <% when 1 %>
                    Inativo
                <% end %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>