<div class="col-xs-12 col-sm-8 col-md-10 col-lg-10">
  <ol class="breadcrumb">
    <li><%= link_to("Início", arearestrita_url) %></li>
    <li><%= link_to("Cadastro de Permissões", permissoes_url) %></li>
    <li class="active">Editar Permissão</li>
  </ol>

  <div class="panel panel-primary">
    <div class="panel-heading col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <ul class="nav navbar-nav navbar-left">
        <li><h3 class="panel-title">Editar Permissão</h3></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle navbar-panel-custom" data-toggle="dropdown">Opções <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li>
              <%= link_to(new_permissao_path, "role" => "button") do %>
                <span class="glyphicon glyphicon-plus-sign"></span>
                &nbsp;Cadastrar Permissão
              <% end %>
            </li>
            <li class="divider"></li>
            <li>
              <%= link_to(permissoes_path, "role" => "button") do %>
                <span class="glyphicon glyphicon-tasks"></span>
                &nbsp;Listar Permissões
              <% end %>
            </li>
          </ul>
        </li>
      </ul>
    </div>
    <div class="panel-body">
      <%= render :partial => "permissoes/form" %>
    </div>
  </div>
</div>