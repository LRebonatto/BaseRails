<div class="col-xs-12 col-sm-8 col-md-10 col-lg-10">
  <ol class="breadcrumb">
    <li><%= link_to("Início", arearestrita_url) %></li>
    <li><%= link_to("Cadastro de Notícias", noticias_url) %></li>
    <li class="active">Exibir Notícia</li>
  </ol>

  <div class="panel panel-primary">
    <div class="panel-heading col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <ul class="nav navbar-nav navbar-left">
        <li><h3 class="panel-title">Cadastro de Notícias</h3></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle navbar-panel-custom" data-toggle="dropdown">Opções <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <% if valida_menu(28) %>
              <li>
                <%= link_to(new_noticia_path, "role" => "button") do %>
                  <span class="glyphicon glyphicon-plus-sign"></span>
                  &nbsp;Cadastrar Notícia
                <% end %>
              </li>
            <% end %>
            <% if valida_menu(29) %>
              <li>
                <%= link_to(edit_noticia_path(@noticia), "role" => "button") do %>
                  <span class="glyphicon glyphicon-pencil"></span>
                  &nbsp;Editar Notícia
                <% end %>
              </li>
            <% end %>
            <% if valida_menu(31) %>
              <li class="divider"></li>
              <li>
                <%= link_to(noticias_path, "role" => "button") do %>
                  <span class="glyphicon glyphicon-tasks"></span>
                  &nbsp;Listar Notícias
                <% end %>
              </li>
            <% end %>
          </ul>
        </li>
      </ul>
    </div>
    <div class="panel-body">
      <div class="row-fluid row-fluid-custom">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
          <div class="panel panel-success">
            <div class="panel-heading">
              <h3 class="panel-title">Informações Básicas</h3>
            </div>
            <div class="panel-body">
              <p><b>Identificador do Site:</b> <%= @noticia.id.to_s.rjust(6, '0') %></p>
              <p><b>Nome:</b> <%= @noticia.nome %></p>
              <p><b>Descrição:</b> <%= @noticia.descricao.gsub('\n', '<br>').html_safe %></p>
              <p><b>Nome em Código:</b> <%= @noticia.slug %></p>
            </div>
          </div>
          <div class="panel panel-info">
            <div class="panel-heading">
              <h3 class="panel-title">Informações de Cadastro</h3>
            </div>
            <div class="panel-body">
              <p><b>Cadastrado em:</b> <%= @noticia.created_at.to_s(:data_hora) %></p>
              <p><b>Cadastrado por:</b> <%= @noticia.user.nome_completo %></p>
              <p><b>Status:</b> 
                <% case @noticia.status %>
                  <% when 0 %>
                    Ativo
                  <% when 1 %>
                    Inativo
                <% end %>
              </p>
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">Imagem de Capa</h3>
            </div>
            <div class="panel-body" align="center">
              <%= image_tag(@noticia.capa.url(:thumb), :class => "img-responsive") %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>