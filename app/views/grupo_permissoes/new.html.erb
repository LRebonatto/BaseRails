<div class="col-xs-12 col-sm-8 col-md-10 col-lg-10">
  <ol class="breadcrumb">
    <li><%= link_to("Início", arearestrita_url) %></li>
    <li><%= link_to("Cadastro de Grupos", grupos_url) %></li>
    <li><%= link_to("Exibir Grupo", grupo_url(:id => params[:grupo_id])) %></li>
    <li class="active">Cadastrar Permissão no Grupo</li>
  </ol>

  <div class="panel panel-primary">
    <div class="panel-heading col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <ul class="nav navbar-nav navbar-left">
        <li><h3 class="panel-title">Cadastrar Permissão no Grupo</h3></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle navbar-panel-custom" data-toggle="dropdown">Opções <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li>
              <%= link_to(grupo_path(:id => params[:grupo_id]), "role" => "button") do %>
                <span class="glyphicon glyphicon-chevron-left"></span>
                &nbsp;Voltar ao Grupo
              <% end %>
            </li>
            <li class="divider"></li>
            <li>
              <%= link_to(grupos_path, "role" => "button") do %>
                <span class="glyphicon glyphicon-tasks"></span>
                &nbsp;Listar Grupos
              <% end %>
            </li>
          </ul>
        </li>
      </ul>
    </div>
    <div class="panel-body">
      <%= render :partial => "grupo_permissoes/form" %>
    </div>
  </div>
</div>