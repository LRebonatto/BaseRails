<%= form_for(@grupo_permissao, :html => {:role => "form"}) do |f| %>
  <%= f.error_messages %>
  <div class="form-group form-group-custom">
    <%= f.label :permissao_id, "Permissão", :class => "control-label" %>
    <%= f.collection_select(:permissao_id, @permissoes, :id, :descricao, { :include_blank => "Selecione a Permissão" }, :class => "form-control") %>
  </div>
  <div class="form-group form-group-custom">
    <%= f.hidden_field :grupo_id, :value => params[:grupo_id] %>
    <%= f.submit "Salvar", :class => "btn btn-success" %>
  </div>
<% end %>